<Page x:Class="Main.Pages.Page7"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Page7">

    <Grid>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Black" FontSize="14" IsEnabled="False" Text="Какой сервер для СЭД Вы хотели бы использовать?"/>
        <RadioButton x:Name="cloudButton" Content="Облачный" Margin="10,0,0,134" HorizontalAlignment="Left" Width="82" Height="16" VerticalAlignment="Bottom" GroupName="Answers" Checked="Button_Checked"/>
        <RadioButton x:Name="winButton" Content="Windows" Margin="10,0,0,113" Height="16" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="82" GroupName="Answers" Checked="Button_Checked"/>
        <RadioButton x:Name="linButton" Content="Linux" Margin="10,0,0,92" Height="16" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="82" GroupName="Answers" Checked="Button_Checked"/>
    </Grid>
</Page>
